<Window x:Class="StretchImage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StretchImage"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Image HorizontalAlignment="Left" VerticalAlignment="Top"
               Height="200" Width="200" Margin="10"
               Name="imgToStretch" Stretch="Fill"/>
        <Image HorizontalAlignment="Left" VerticalAlignment="Top"
               Height="200" Width="0" Margin="10,10,0,0"               
               Name="imgToStretch2" Stretch="Fill"/>
        <Button Name="btnStr"
                HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Content="Stretch" Height="100" Width="200"
                Margin="10" FontSize="30"
                Click="Button_Click"></Button>
        
    </Grid>
</Window>
